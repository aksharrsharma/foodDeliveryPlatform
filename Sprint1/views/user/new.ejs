<%- include('../partials/header.ejs')%>
<link rel="stylesheet" type="text/css" href="/css/login.css">

<main> 
    <div class="parent">
        <div class="signup-form">
            <h2><i class="fas fa-user-plus"></i> Create an Account</h2>
            
            <form action="/users" method="POST">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" required placeholder="Your first name">
                </div>
                
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" required placeholder="Your last name">
                </div>
                
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required placeholder="your@email.com">
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required placeholder="Choose a secure password (min. 8 characters)">
                    <p class="password-hint">Must be at least 8 characters long</p>
                </div>
                
                <div class="form-group admin-section">
                    <label for="admin">Administrator Key (Leave blank if not an admin)</label>
                    <input type="text" id="admin-key" name="admin" placeholder="Admin key (if applicable)">
                </div>
                
                <button type="submit"><i class="fas fa-user-check"></i> Sign Up</button>
                
                <div class="form-footer">
                    <p>Already have an account? <a href="/users/login">Log in here</a></p>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs')%>