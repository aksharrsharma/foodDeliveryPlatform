  
<%- include('../partials/header.ejs')%>
<link rel="stylesheet" type="text/css" href="/css/newItem.css">
<link rel="stylesheet" type="text/css" href="/css/error.css">

    <main>
        <div class="grid-container-sell">
            <div class="sell-directions"> 
                <h2>List a new Menu Item</h2>
                <!-- <p>To list, simply fill out information about your product and include an image.</p> -->
                <img src="/images/plate2.png">
            </div>
            <div class="form">
                <form action = '/items' method = 'POST' enctype="multipart/form-data">
                    <label for="name">Name </label> 
                    <input type="text" id="product-name" name="name" required><br>
                    <br>
                    <label for="price">Price </label> 
                    <input type="number" step="0.01" id="product-price" name="price" required min="0.01" max="1000000"><br>
                    <label for="description">Description </label> 
                    <textarea id="product-details" name="description" required minlength="10"></textarea><br>
                    <label for="image">Image </label> 
                    <input type="file" id="product-image" name="image" required><br><br>
                    <button type="submit">Submit</button>      
                </form>               
            </div>    
        </div>
    </main>