<%- include('../partials/header.ejs')%>
<link rel="stylesheet" type="text/css" href="/css/items.css">

<main>
    <div class="menu-header">
        <h2>Favorites</h2>
    </div>

    <div class="grid-container-products">
        <% if(order.length) { %>
            
            <% order.forEach(item =>{ %>
                <%= console.log(item)%>
                        <%if(item && item._id) { %>
                            <div>
                            <a href="/items/<%=item._id%>">
                                <img src="<%=item.image%>" alt="<%= item.name %>">
                                <h2><%= item.name %></h2>
                            </a>
                            <h2>$<%= parseFloat(item.price).toFixed(2) %></h2>
                            <form action='/items/<%=item._id%>/orders' method='POST'>
                                    <button class="add-to-cart"><i class="fas fa-cart-plus"></i> Add to Cart</button>
                            </form>
                            <form action="/items/<%=item._id%>/unfavorite" method="POST">
                                <button class="delete-button"><i class="fa-solid fa-star"></i> Unfavorite</button>
                            </form>
                            
                            </div>
                        <% } %>


                
                    
                
            <% }); %> 

        <% } else { %> <p>You have no Favorites.</p> <% } %>        



    </div>
</main>

<%- include('../partials/footer.ejs')%>