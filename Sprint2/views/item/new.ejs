<%- include('../partials/header.ejs')%>
<link rel="stylesheet" type="text/css" href="/css/newItem.css">

<main>
    <div class="grid-container-sell">
        <div class="sell-directions"> 
            <h2>Add a New Menu Item</h2>
            <p>Fill out the form with your dish details. High-quality images help showcase your culinary creations.</p>
            <img src="/images/plate2.png" alt="Food plate illustration">
        </div>
        
        <div class="form">
            <form action="/items" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Item Name</label> 
                    <input type="text" id="product-name" name="name" required placeholder="e.g. Grilled Salmon">
                </div>
                
                <div class="form-group">
                    <label for="price">Price ($)</label> 
                    <input type="number" step="0.01" id="product-price" name="price" required min="0.01" max="1000000" placeholder="e.g. 12.99">
                </div>
                
                <div class="form-group">
                    <label for="description">Description</label> 
                    <textarea id="product-details" name="description" required minlength="10" placeholder="Describe your dish, ingredients, and preparation method..."></textarea>
                </div>
                
                <div class="form-group">
                    <label for="image">Upload Image</label> 
                    <input type="file" id="product-image" name="image" required accept="image/*">
                    <p class="file-help">Choose a clear, appealing image of your dish (JPEG, PNG formats)</p>
                </div>
                
                <button type="submit"><i class="fas fa-plus-circle"></i> Add to Menu</button>
            </form>
        </div>
    </div>
</main>

